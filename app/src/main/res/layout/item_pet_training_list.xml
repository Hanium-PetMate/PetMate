<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="150dp"
android:background="@drawable/background_home_rectangle_1_2">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="20dp">

    <ImageView
        android:id="@+id/img_pet_training"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/activity_main_home_havepet_petlist_division"
        android:scaleType="centerCrop"
        android:src="@drawable/cat2_temp" />

    <ImageView
        android:id="@+id/img_pet_training_star"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|end"
        android:layout_margin="3dp"
        android:src="@drawable/cat2_temp" />

</androidx.cardview.widget.CardView>

</RelativeLayout>