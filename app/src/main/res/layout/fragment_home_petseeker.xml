<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="55dp"
            android:text="PET MATE"
            android:textAppearance="@style/pet_mate" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="117dp"
            android:background="@drawable/background_home_1_roundrectangle_homepetcolor3_round_20dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/background_petseeker_rectangle_0"
            android:text="강아지"
            android:textAppearance="@style/petseeker_catagory" />

        <Button
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/background_petseeker_rectangle_0"
            android:text="강아지"
            android:textAppearance="@style/petseeker_catagory" />

        <Button
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/background_petseeker_rectangle_0"
            android:text="강아지"
            android:textAppearance="@style/petseeker_catagory" />

        <Button
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/background_petseeker_rectangle_0"
            android:text="강아지"
            android:textAppearance="@style/petseeker_catagory" />

        <View
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/background_home_1_roundrectangle_homepetcolor3_round_20dp" />

        <Spinner
            android:id="@+id/spinner_petseeker"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="195dp"
            />

        <Button
            android:id="@+id/btn_survey"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/background_home_1_roundrectangle_homepetcolor3_round_20dp" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_petseeker_recommend"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="270dp" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circleindicator_petseeker_recommend"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="180dp"
            android:layout_marginTop="410dp"
            app:ci_drawable="@drawable/indicator_purple"
            app:ci_drawable_unselected="@drawable/indicator_gray" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_petseeker_list"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="425dp"
            android:background="@drawable/background_petseeker_rectangle_1"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circleindicator_petseeker_petlist"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="180dp"
            android:layout_marginTop="895dp"
            app:ci_drawable="@drawable/indicator_purple"
            app:ci_drawable_unselected="@drawable/indicator_gray" />

    </RelativeLayout>

</ScrollView>