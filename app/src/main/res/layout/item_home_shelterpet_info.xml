<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:background="@drawable/background_home_shelterpet_additionalinfo_petcolor8_roundstroke_22dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="7dp">

    <TextView
        android:id="@+id/abandonedinfo_additionalinfo_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:includeFontPadding="false"
        android:text="발생장소"
        android:textAppearance="@style/shelterpet_additionalinformation" />

    <TextView
        android:id="@+id/abandonedinfo_additionalinfo_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/abandonedinfo_additionalinfo_tag"
        android:background="@android:color/transparent"
        android:includeFontPadding="false"
        android:text=": "
        android:textAppearance="@style/shelterpet_additionalinformation" />

    <TextView
        android:id="@+id/abandonedinfo_additionalinfo_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/abandonedinfo_additionalinfo_colon"
        android:background="@android:color/transparent"
        android:includeFontPadding="false"
        android:text="임은동 806-4"
        android:textAppearance="@style/shelterpet_additionalinformation" />

</RelativeLayout>