<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandWhite">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/com_recyclerview_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/brandWhite"
        app:itemIconTint="@color/brandBlack"
        app:itemTextColor="@color/brandBlack"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/btm_navi_menu"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/irishgrover"
        android:text="PetMate"
        android:textColor="#000000"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/background_home_1_roundrectangle_homepetcolor3_round_20dp"
        android:padding="8dp">

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/background_home_1_roundrectangle_homepetcolor1_round_10dp"
            android:text="강아지" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="73dp"
            android:background="@drawable/background_home_1_roundrectangle_homepetcolor1_round_10dp"
            android:text="강아지" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="138dp"
            android:background="@drawable/background_home_1_roundrectangle_homepetcolor1_round_10dp"
            android:text="강아지" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="203dp"
            android:background="@drawable/background_home_1_roundrectangle_homepetcolor1_round_10dp"
            android:text="강아지" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="176dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/background_home_1_roundrectangle_homepetcolor3_round_20dp"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="센터명" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:background="@drawable/background_home_1_roundrectangle_homepetcolor3_round_20dp"
                android:text="설문조사" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/background_home_1_roundrectangle_homepetcolor3_round_20dp"
        android:drawableStart="@drawable/main_home_nopet_titleimage_crop_220"
        android:text="탈주닌자\n놀라버린 고양이ㆍ1살\n추가내용" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/background_home_1_roundrectangle_homepetcolor3_round_20dp"
        android:padding="20dp"
        android:layout_marginTop="400dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="880dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_brandwhite_round_10dp"
        android:text="페이지 표시"
        android:textSize="15sp" />


</RelativeLayout>