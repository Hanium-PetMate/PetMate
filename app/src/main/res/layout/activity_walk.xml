<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoDragView="@id/slide_layout"
    app:umanoPanelHeight="145dp"
    tools:context=".walk.WalkActivity">

    <RelativeLayout
        android:id="@+id/KakaoMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brandWhite">

        <View
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/background_map_rectangle_0" />

        <EditText
            android:id="@+id/walk_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="55dp"
            android:background="@android:color/transparent"
            android:includeFontPadding="false"
            android:text="검색"
            android:textAppearance="@style/map_search" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slide_layout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/background_petseeker_rectangle_1">

        <View
            android:id="@+id/activity_walk_0_division"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/walk_start"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_alignEnd="@id/activity_walk_0_division"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="5dp"
            android:text="Start" />

        <Button
            android:id="@+id/walk_finish"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_alignStart="@id/activity_walk_0_division"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="35dp"
            android:text="Finish" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_alignEnd="@id/activity_walk_0_division"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="5dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_alignStart="@id/activity_walk_0_division"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="35dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_alignEnd="@id/activity_walk_0_division"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="5dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_alignStart="@id/activity_walk_0_division"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="35dp">

        </RelativeLayout>

    </RelativeLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>