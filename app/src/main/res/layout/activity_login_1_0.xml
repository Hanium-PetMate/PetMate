<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/activity_register_btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:fontFamily="@font/irishgrover"
        android:gravity="center"
        android:text="PetMate"
        android:textColor="#000000"
        android:textSize="80sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="이름*"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/activity_register_editText_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_round_12dp_f8f8fa" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="이메일 주소*"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/activity_register_editText_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_round_12dp_f8f8fa" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="비밀번호*"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/activity_register_editText_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_round_12dp_f8f8fa" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="비밀번호 확인*"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/activity_register_editText_passwordMatch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_round_12dp_f8f8fa" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="약관 동의"
        android:textColor="#000000"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/activity_register_checkbox_allTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="전체 약관 동의"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_round_12dp_f8f8fa"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/activity_register_checkbox_terms1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="약관 1"
            android:textColor="#000000"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/activity_register_checkbox_terms2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="약관 2"
            android:textColor="#000000"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/activity_register_checkbox_terms3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="약관 3"
            android:textColor="#000000"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/activity_register_checkbox_terms4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="약관 4"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/activity_register_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_round_12dp_b4e0f4"
        android:text="아이디 생성"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />


</LinearLayout>