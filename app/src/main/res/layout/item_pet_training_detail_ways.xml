<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_pet_health_vaccination_homepetcolor2_round_15dp">

    <TextView
        android:id="@+id/pet_tarining_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="1단계"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/pet_tarining_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="72dp"
        android:text="이런저런 설명들"
        style="@style/pet_main_training_detail"/>

</RelativeLayout>