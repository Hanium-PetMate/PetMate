<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="510dp">

    <TextView
        android:id="@+id/pet_tarining_1_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="1단계"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/pet_tarining_1_detail"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/pretendard_regular"
        android:lineSpacingExtra="-10dp"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textColor="#767676"
        android:textSize="23sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/pet_tarining_1_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@id/activity_main_home_havepet_petlist_division"
            android:scaleType="centerCrop"
            android:src="@drawable/cat2_temp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>