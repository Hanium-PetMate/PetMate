<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandWhite"
    tools:context=".myinf.MyinfPhotoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edit_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"

            app:layout_constraintBottom_toTopOf="@+id/imageview_post"/>
        <Button
            android:id="@+id/btn_addPost"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="300dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:text="올리기"
            android:background="@drawable/background_home_rectangle_1_2"
            android:textAppearance="@style/pet_inf_post"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/imageview_post"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="47dp"
            android:text="+"
            android:textSize="200dp"
            android:elevation="24dp"
            android:visibility="visible"
            android:src="@drawable/add_new_65dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_addPost"
            />

        <EditText
            android:id="@+id/edit_post_detail"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="76dp"
            android:textAppearance="@style/pet_community_post"
            android:hint="문구 입력"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.65sp"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@+id/imageview_post"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>