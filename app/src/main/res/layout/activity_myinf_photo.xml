<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandWhite"
    tools:context=".myinf.MyinfPhotoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_addPost"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="300dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:text="올리기"
            android:background="@drawable/background_home_rectangle_1_2"
            android:textAppearance="@style/pet_inf_post"
            />

        <Button
            android:id="@+id/btn_post"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="73dp"
            android:text="+"
            android:textSize="200dp"
            android:elevation="24dp"
            android:visibility="visible"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_myinf_photo_post"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="73dp"
            android:visibility="invisible"
            />


        <EditText
            android:id="@+id/edit_post"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="423dp"
            android:textAppearance="@style/pet_community_post"
            android:hint="문구 입력"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.65sp"
            android:gravity="top"
            />
    </RelativeLayout>

</ScrollView>